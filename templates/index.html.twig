{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header/_header.html.twig'%}
    <div class="up">
        <div class="container mt-4" {{ stimulus_controller('symfony/ux-swup/swup')}}>
            {# <img src="https://ghchart.rshah.org/leahad" alt="Name Your Github chart"> #}
            {# <a href="https://www.flaticon.com/free-icons/fortune-cookie" title="fortune cookie icons">Fortune cookie icons created by amonrat rungreangfangsai - Flaticon</a> #}
            <div class="text-center mt-4">
                <div class="col-sm-12" style="margin-top: 1rem;">
                    <p><strong>{{ github_contributions }}</strong> contributions Github depuis mars 2023</p>
                </div>
            </div>
            
            <div class="js-filter" id="swup">
                <div class="d-flex justify-content-end">
                    {% include 'project/_SearchSkills.html.twig'%}
                </div>
                <div class="margin">
                    <div id="projects" class="row row-cols-1 row-cols-md-2 g-3 js-filter-content">
                        {% include 'project/_projects.html.twig'%}
                    </div>
                    <div class="mt-4 js-filter-pagination">
                        {% include 'project/_pagination.html.twig'%}
                    </div>
                </div>
            </div>
        </div>
        <img id="contact-img" src="{{ asset('build/images/form5.png') }}" alt="form"/>
        <div id="contact">
            <div id="contact-form" class="col-md-6 col-xl-5 col-xxl-4 mb-5">
                {% include 'contact/_contactForm.html.twig'%}
            </div>
        </div>
        <div id="cookie">
            <h6 class="text-center p-2">Un cookie pour la route ?</h6>
            <div id="fortune-cookie" class="d-flex justify-content-center">
                <img class="pb-4 pt-4" src="{{ asset('build/images/fortune-cookie.png') }}" alt="fortune-cookie"/>
                <div class="tooltip p-3">
                    <p class="text-center fst-italic">{{ fortune_cookie }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
